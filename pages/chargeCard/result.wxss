@import "../../common/fontStyle.wxss";

page {
  font-family: 'PingFangSC-Regular';
  overflow: hidden;
}

.container {
  padding: 0;
  height: 100%;
  font-family: 'PingFangSC-Regular';
  overflow: hidden;
}

view.bg_view {
  height: auto;
}

.bg-view-image {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}

.title-word {
  height: 220rpx;
  width: 590rpx;
  text-align: center;
  margin-top: 56rpx;
  margin-left: auto;
  margin-right: auto;
}

.title-word .firstLine {
  width: 590rpx;
  font-size: 56rpx;
  font-weight: bold;
  color: #725b2a;
  font-family: 'PingFangSC-Regular';
}

.title-word .secondLine {
  font-size: 32rpx;
  color: #725b2a;
  margin-top: 28rpx;
  font-family: 'PingFangSC-Regular';
}

.secondLine text {
  font-weight: bold;
}

image.card_img {
  position: absolute;
  z-index: 0;
  width: 720rpx;
  left: 50%;
  margin-left: -360rpx;
}

image.QRcode_img {
  position: absolute;
  bottom: 48rpx;
  left: 50%;
  margin-left: -283rpx;
  width: 566rpx;
  height: 156rpx;
}

.money {
  position: absolute;
  z-index: 0;
  top: 535rpx;
  font-size: 90rpx;
  font-family: 'DINPro-Bold';
  color: #fff;
  font-weight: bold;
  left: 50%;
  width: 310rpx;
  text-align: right;
  padding-right: 42rpx;
  box-sizing: border-box;
}

.money text {
  font-size: 50rpx;
}
