  top: 0;
}


/* 模板toast */
.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  display: block;
  z-index: 9998;
}
.view_toast {
  width: 100%;
  display: block;
  position: fixed;
  top: 40%;
  z-index: 9999;
  font-size: 30rpx;
  text-align: center;
  color: #FFFFFF;
  
}
.toast_text {
  max-width: 40%;
  min-width:20%;
  padding: 3% 4%;
  border-radius: 15rpx;
  display: inline-block;
  vertical-align: middle;
  opacity: 0.9;
  background: rgba(0,0,0,0.7);
  animation: 1800ms rainbow;
}
@keyframes rainbow {
  0% {opacity: 0;background: rgba(0,0,0,0);transform: scaleX(0) scaleY(0);}
  10% {opacity: 0.9;background: rgba(0,0,0,0.7);transform: scaleX(1) scaleY(1);}
}