/** 模板login样式 */
.view_login_bk {
  position: fixed;
  top: 0;
  height: 100%;
  width: 100%;
  background: rgba(0,0,0,0.70);
  margin: 0 auto;
  padding: 200rpx 0;
  z-index: 98;
}
.view_login {
  position: fixed;
  top: 20%;
  left: 5%;
  width: 90%;
  margin: 0 auto;
  background-color: #FFFFFF;
  border-radius: 10rpx;
  z-index: 99;
}
.login_head {
  background: #F3F4F5;
  height: 180rpx;
  text-align: center;
  border-radius: 10rpx;
}
.login_text {
  display: inline-block;
  font-size: 17px;
  color: #646464;
  margin-top: 50rpx;
}
.login_subtext {
  display: inline-block;
  font-size: 13px;
  color: #969696;
}
.view_form {
  width: 100%;
  margin: 0 auto;
  padding: 10rpx 0 10rpx 0;
  position: relative;
  float:left;
}
.view_input {
  width: 90%;
  margin: 0 5%;
  box-shadow: inset 0 -1px 0 0 #EEF2F5;
  float: left;
  margin-bottom: 30rpx;
}
.login_input {
  height: 112rpx;
  line-height: 112rpx; 
  min-width: 63%;
  max-width: 65%;
  padding: 0 1%; 
  font-size: 35rpx;
  margin: 0 auto;
  float: left;
}
.login_input_code {
  min-width: 100%;
}
.login_placeholder{
  font-size: 30rpx;
  color: #C8C8C8;
}
.view_code_btn {
  position: relative;
  display: block; 
  width: 32%;
  height: 112rpx;
  float: right;
}
.get_code {
  display: inline-block;
  position: absolute;
  top: 30rpx;
  right: 10rpx;
  min-width: 80rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #C8C8C8;
  padding: 0 10rpx;
}
.view_login_confirm {
  width: 100%;
  margin: 0 auto;
} 
.login_confirm {
  width: 90%;
  background: #CFD4D7;
  border-radius: 4px;
  color: #FAFBFC;
}
.view_login_logo {
  width: 100%;
  margin: 0 auto;
  text-align: center;
  padding: 30rpx 0;
}
.login_logo {
  height: 40rpx;
  width: 138rpx;
}

