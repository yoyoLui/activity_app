
page {
  height: 100%;
}
button[disabled] {
  box-shadow: 0 0 0 0 rgba(0,0,0,0);
}

/** 模板alert_card样式 */
.blur {
  -webkit-filter: blur(20rpx); /* Chrome, Opera */
  -moz-filter: blur(20px);
  -ms-filter: blur(20px);    
  filter: blur(20px);
}
.ban_move {
  overflow-y: hidden;
}
.alert_card_blur {
  height: 100%;
  width: 100%;
  display: block;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.70);
  z-index: 98;
  overflow: hidden;
}
.alert_card_content {
  display: block;
  height: 100%;
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 99;
  color: #FFFFFF;
  text-align: center;
} 

.ac_text,.ac_card_name,.ac_join,.ac_ask,.view_ac_card_img {
  margin: 20rpx auto;
  text-align: center;
}
.ac_text {
  margin-top: 130rpx;
}
.ac_text_sm {
  font-size: 28rpx;
  color: #FFFFFF;
  letter-spacing: 1.4rpx;
}
.ac_card_name {
  font-size: 72rpx;
  color: #FFFFFF;
  letter-spacing: 3.6rpx;
}
.ac_card_name_sm {
  font-size: 48rpx;
  color: #FFFFFF;
  letter-spacing: 2.4rpx;
}
.view_ac_card_img {
  margin: 60rpx auto;
}
.ac_card_img {
  height: 540rpx;
  width: 348rpx;
}
.ac_btn {
  width: 280rpx;
  height: 80rpx;
  background: #FF8D00;
  box-shadow: 0 2px 11px 0 rgba(0,0,0,0.30);
  border-radius: 25px;
  font-size: 16px;
  color: #FFFFFF;
  letter-spacing: 0.8px;
}
.close_btn {
  width: 40rpx;
  height: 40rpx;
  margin: 50rpx auto;
