/* pages/collect_card/others/others.wxss */

@import "../common/common.wxss";
page {
  overflow-y: hidden;
}
.container {
  height: 100%;
  width: 100%;
  margin: 0 auto;
  text-align: center;
  background-image: linear-gradient(-132deg, #FFD600 0%, #FFBF00 100%);
}
.section {
  margin: 0 auto; 
  padding: 38rpx 0;
  text-align: center;
}
.head_text {
  display: block;
  font-size: 48rpx;
  color:  #4A4A4A;
  font-weight: bold;
}
.head_subtext {
  display: block;
  font-size: 36rpx;
  margin-top: 20rpx;
  color:  #4A4A4A;
}
.asker_info {
  display: inline-block;
  position: relative;
  height: 90rpx; 
  line-height: 90rpx; 
  width: 576rpx;
  background: #FFFFFF;
  border-radius: 100px;
  font-size: 30rpx;
  color: #FFC300;
  letter-spacing: 0.8px;
  vertical-align: middle;
}
.asker_img {
  position: absolute;
  top: 5rpx;
  left: 0;
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin: 0 10rpx;
}
.asker_text {
  display: inline-block;
  position: absolute;
  left: 100rpx;
}


/* 中间所有叠加的车图 */
.all_img {
  height: 480rpx;
  position: relative; 
  margin: 0 auto;
  text-align: center;
}
.img {
  position: absolute;  
  height: 468rpx;
  width: 314rpx;
  display: inline-block;
  border-radius: 14rpx; 
  box-shadow: 0 0 28rpx 0 rgba(0,0,0,0.29); 
}
.img-1 {
  left: 50rpx;
  z-index: 11;
}
.img-2 {
  left: 130rpx;
  z-index: 12;
}
.img-3 {
   left: 210rpx; 
   z-index: 15;
}
.img-4 {
  right: 130rpx;
  z-index: 14;
}
.img-5 {
  right: 50rpx;
  z-index: 13;
}

/* 我也要参加/帮他获得一张 */
.pt-20 {
  padding: 20rpx;
}
.view_button {
  padding-bottom: 0;
}
.btn {
  display: inline-block; 
  width: 280rpx;
  height: 80rpx;
  box-shadow: 0 2px 11px 0 rgba(0,0,0,0.30);
  border-radius: 25px;
  margin: 0 20rpx;
  font-size: 32rpx;
  color: #FFFFFF;
}
.btn-left {
  background: #FF8D00; 
}
.btn-right {
  background: #6DD100;
}

/* 查看规则 */
.view_rule {
  text-align: center;
  padding: 15rpx;
}
.rule {
  font-size: 32rpx;
  color: #5CA7FF;
  letter-spacing: 0.8px;
}

.view_custom_service {
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
  padding: 5rpx;
}
.custom_service {
  font-size: 20rpx;
  color: #999999;
  letter-spacing: 0.8px;
  display: inline-block;
}
