<view class="container">
  <view class="login-img" style="background-color:#f4f4f4">
    <image src="{{head_url}}" mode="widthFix" style="height:28rem;"></image>
  </view>
   <canvas canvas-id="myCanvas" style="width:100%;height:36px;" /> 
  <form report-submit="true" bindsubmit="formSubmit" bindreset="formReset">
    <!--输入手机号码-->
    <view class="login-info">
      <view class="login-phone">
        <input bindinput="bindPhoneInput" value="{{mobile}}" type="number" class="phoneInput" placeholder-style="text-align:center" style="text-align: center;color: #000;" placeholder="请输入手机号" maxlength="11" />

      </view>
    </view>
    <!--分享领卡catchtouchstart="login"  disabled="{{!button_able}}"-->
    <button formType="submit" open-type="share" class="button {{button_disabled}}" disabled="{{button_disabled}}">点此报名参与</button>
    <view class="button_down_text" style="margin-top:1.33rem;">
      <view>{{button_down_text}}</view>
      <view>{{button_down_text_add}}</view>
    </view>
  </form>
</view>