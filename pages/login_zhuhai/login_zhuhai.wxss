/* login_zhuhai.wxss */@import "../../common/common.wxss";

page {
  background: #f4f4f4;
}

.login-img {
  background-color: #f4f4f4;
}

.login-img image {
  width: 100%;
  background-color: #f4f4f4;
}

.login-info {
  padding: 12px 25px 0 25px;
}

.login-phone {
  width: 638rpx;
  height: 88rpx;
  color: rgba(12, 17, 19, 0.72)!important;
  background-color: #fff;
  display: flex;
  -webkit-box-align: center;
  -moz-box-align: center;
  -ms-flex-align: center;
  -webkit-align-items: center;
  align-items: center;
  justify-content: center;
  border: 1px solid #dcdcdc;
  border-radius: 51px;
  text-align: center;
  margin: 0;
  font-size: 36rpx;
}

.login-phone input {
  color: rgba(12, 17, 19, 0.86);
  flex: 1;
  margin-top: 14.875px;
  margin-bottom: 14.875px;
}

.button {
  margin-top: 30rpx;
}

.button.true {
  color: #fff;
  background: #cfd4d7;
}

button[disabled][type="default"], wx-button[disabled]:not([type]) {
  color: #fff;
  background: #cfd4d7;
}

.oil-icon {
  width: 30rpx;
  height: 30rpx;
}


.button-hover {
  background-color: #e0e0e0;
}
.button_down_text {
  margin-top:24rpx;
  text-align: center;
  font-size: 28rpx;
  color: #8e8e93;
}
