/* pages/old_active/old_active.wxss */
@import "../../common/common.wxss";

page {
  background: #f4f4f4;
}

.group-coupon {
  width: 638rpx;
  height: auto;
  margin: 0 auto;
  margin-top: 214rpx;
}

.group-coupon .coupon {
  position: relative;
  width: 638rpx;
  border-radius: 8.32rpx;
  height: 234rpx;
  background: #fff;
  margin-bottom: 16rpx;
  text-align: left;
  padding-left: 32rpx;
  box-sizing: border-box;
}

.group-coupon .coupon::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  display: inline-block;
  border-bottom-left-radius: 8.32rpx;
  border-bottom-right-radius: 8.32rpx;
  height: 18rpx;
  background-image: url("//img.ejiayou.com/imgs/activity/images/mini_apps_experience/coupon_line.png");
  background-size: 100% 100%;
}

.coupon > view {
  position: absolute;
  max-width: 90%;
  color: #646464;
  font-size: 24rpx;
}

.coupon > .coupon-value {
  position: absolute;
  right: 32rpx;
  font-size: 72rpx;
  color: #ffa032;
  margin-top: 40rpx;
}

.coupon > .coupon-value::before {
  content: "ï¿¥";
  position: absolute;
  left: -41.6rpx;
  font-size: 51.2rpx;
  top: 17.28rpx;
  color: #ffa032;
}

.coupon > .coupon-discount {
  position: absolute;
  right: 83.2rpx;
  font-size: 8.32rpx;
  color: #ffa032;
  margin-top: 40rpx;
}

.coupon > .coupon-title {
  font-size: 32rpx;
  margin-top: 40rpx;
}

.coupon > .coupon-exp-date {
  width: 409rpx;
  font-size: 24.32rpx;
  margin-top: 88.32rpx;
}

.coupon > .coupon-use-limit {
  color: #969696;
  margin-top: 2rem;
}

.coupon > .coupon-car-limit {
  color: #969696;
  margin-top: 168.31rpx;
  height: 44.8rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.login-img {
  background-color: #f4f4f4;
}

.login-img image {
  width: 100%;
  height: 1200rpx;
  background-color: #f4f4f4;
  position: absolute;
  z-index: -1;
  top: 0;
}

.stationList {
  position: absolute;
  z-index: -1;
  top: 1200rpx;
}


.button image {
  width: 40rpx;
  height: 43.2rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
}

.button {
  margin: 40rpx auto;
  height: 44rpx;
}
