}
.panel-image{
background: #fff;
}
.panel-image image{
width:100%;
}
.head-img{
width:40px;
height:40px;
border-radius:50%;
}
.panel-record{
background:#fff;
}
.panel-record-content{
margin: 0 32px;
overflow: hidden;
}
.records-title{
font-weight: normal;
margin: 24px auto 11.52px;
font-size: 14.08px;
color: #ababab;
width: 100%;
text-align: center;
}
.records-title text{
position: relative;
font-size: 15px;
}
.records-title text::after,.records-title text::before{
content: '';
position: absolute;
display: block;
width: 320px;
height: 1px;
background-color: #E1E2E2; 
}
.records-title text:before {
left: -339.2px;
top: 50%;
}
.records-title text:after {
right: -339.2px;
top: 50%;
}

.invites .item{
height: 72px;
}
.item .dl{
position: relative;
height: 100%;
}
.item .dl .dt{
position: absolute;
width: 40px;
height: 40px;
left: 0;
top: 50%;
margin-top: -20px;
background: #CCC;
border-radius: 40px;
}
.item .name{
position: absolute;
left: 56px;
top: 16px;
font-size: 18px;
color: #565A5B;
}
.item .time{
position: absolute;
left: 56px;
bottom: 10px;
font-size: 14px;
color: #A1A4A5;
}
.item .dl .amount:before{
content: "ï¿¥";
position: absolute;
left: -14.4px;
bottom: 4px;
font-size: 14px;
}
.item .dl .status1{
color: #565A5B;
}
.item .dl .status1 .amount{
position: absolute;
right: 0;
top: 16px;
font-size: 28px;
}
.item .dl .status2{
color: #A1A4A5;
}
.item .dl .status2 .amount{
position: absolute;
right: 0;
top: 10px;
font-size: 28px;
}
.item .dl .status2 .status{
position: absolute;
right: 0;
bottom: 10px;
font-size: 14px;
}
.rules {
color:#8B8E8F;
font-size:14px;
position:relative;
text-align:left;
line-height:20px;
margin-bottom: 32px;
}
.rules view{
margin-top:8px;
position:relative;
padding-left: 15px;
}
.p1:before{ content: "1.";position: absolute;top: 0; left: 0; }
